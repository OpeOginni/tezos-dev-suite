{
  "name": "create-tez-dapp",
  "version": "0.0.1",
  "description": "A CLI to help developers start creating frontend dapps on Tezos",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpeOginni/tezos-dev-suite.git",
    "directory": "create-tez-dapp"
  },
  "main": "./dist/index.js",
  "type": "module",
  "keywords": [
    "tezos",
    "dapp",
    "frontend"
  ],
  "scripts": {
    "typecheck": "tsc",
    "build": "tsup",
    "prepare": "npm run build",
    "dev": "tsup --watch",
    "run-dev": "tsup --watch && node dist/index.js",
    "clean": "rm -rf dist",
    "start": "bun dist/index.js",
    "link": "npm link",
    "unlink": "npm unlink create-tez-dapp",
    "publish": "bun run build && npm publish"
  },
  "bin": {
    "create-tez-dapp": "./dist/index.js"
  },
  "author": "opeoginni",
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^9.2.14",
    "tsup": "^8.0.2"
  }
}
